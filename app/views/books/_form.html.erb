<body class="add-book">
  <div id="book-form">
      <h3>The form below is to add a book to an existing genre at the library.</h3>

        <%= form_for @book, html: { multipart: true } do |f| %>

        <%= f.label :title, "Title:"%><br>
        <%= f.text_field :title %><br>
        <br>
        <%= f.label :author, "Author:"%><br>
        <%= f.text_field :author%><br>
        <br>
        <%= f.label :year, "Year of publication:"%><br>
        <%= f.text_field :year%><br>
        <br>
        <%= f.label :description, "Write a short book summary:"%><br>
        <%= f.text_area :description%><br>
        <br>
        <h3> Choose a genre: </h3>
         <%= f.collection_radio_buttons :genre_id, Genre.all, :id, :name %>
        <br>
        <br>
        <br>
        <br>
        <%= f.submit %>
      <% end %>
    </div>
  </body>
