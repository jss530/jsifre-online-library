    <%= form_for(@book) do |f| %>
      <%= f.label :title, "Title:"%><br>
      <%= f.text_field :title %><br>
      <br>
      <%= f.label :author, "Author:"%><br>
      <%= f.text_field :author%><br>
      <br>
      <%= f.label :year, "Year of publication:"%><br>
      <%= f.text_field :year%><br>
      <br>
      <%= f.label :description, "Write a short book summary:"%><br>
      <%= f.text_area :description%><br>
      <br>
      
      <h3> Choose a genre, or add a new genre below: </h3>
       <%= f.collection_check_boxes :genre_id, Genre.all, :id, :name %>
      <br>
      <br>
      <%= f.fields_for :genre, Genre.new do |g_form| %>
        <%= g_form.label :name, "New Genre Name" %>
        <%= g_form.text_field :name %>
        
      <% end %>
      <br>
      <br>
      <%= f.submit "Add book" %>
    <% end %>
    