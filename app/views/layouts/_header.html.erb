<nav class="">
        <br>
        <% if user_signed_in? %>
           <h3 class="signed-in-confirm"><strong><%= "Signed in as #{current_user.username}" %></strong></h3>
           <br>
           <%= link_to "My library", library_path(current_user.id), :class => "nav-button" %><br>
           <%= link_to "Sign out", destroy_user_session_path, :class => "nav-button", method: :delete %>
        <% else %>
           <%= link_to "Log into your account", new_user_session_path, :class => "nav-button"  %><br>
           <%= link_to "Become a member", new_user_registration_path, :class => "nav-button"  %><br>
        <% end %>
        <br>
        <%= link_to "Browse library", root_path, :class => "nav-button"  %><br>
</nav>
