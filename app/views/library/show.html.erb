<h1><%= current_user.email%>'s Library</h1>

<h3>Books I've Rented</h3>
    <% if @rented_books != [] %>
        <ol>
        <% @rented_books.each do |book| %>
            <li><%=book.title%> by <%=book.author%></li><br>
            <%= link_to 'Delete book', book_path(book), method: :delete %> <%= link_to 'Edit book', edit_book_path(book) %>
        <%end%>
        </ol>
    <% else %>
        <p>Your list is currently empty.</p>
    <% end %>

<h3>Books I Own </h3>

    <% if @owned_books != [] %>
        <ol>
        <% @owned_books.each do |book| %>
            <li><%=book.title%> by <%=book.author%></li>
            <%= link_to 'Delete book', book_path(book), method: :delete %> <%= link_to 'Edit book', edit_book_path(book) %>
        <%end%>
        </ol>
    <% else %>
        <p>Your list is currently empty.</p>
    <% end %>
    <br>
    <p><%=link_to 'Click here to add a book to your Books I Own list', new_book_path%></p>
    
<h3>My Comments </h3>
    <ol>
    <% @my_library.user.comments.each do |comment| %>
        <li><%=link_to comment.book.title, book_path(comment.book.id)%></li>
        <strong><p><%=comment.commenter%></p></strong>
        <p><%=comment.body%></p>
        <br>
    <% end %>
    </ol>