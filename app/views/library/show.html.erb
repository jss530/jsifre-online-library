<h1><%= current_user.email%>'s Library</h1>

<h3>You have <%= current_user.credits%> credit(s) available.</h3>

<h3>Books I've Rented</h3>
    <% if @rented_books != [] %>
        <ol>
        <% @rented_books.each do |book| %>
            <li><%=book.title%> by <%=book.author%></li><br>
            <%= link_to 'Return book', return_path(book.id)%>
            <br>
            <br>
        <%end%>
        </ol>
    <% else %>
        <p>Your list is currently empty.</p>
    <% end %>

<h3>Books I Own </h3>

    <% if @owned_books != [] %>
        <ol>
        <% @owned_books.each do |book| %>
            <li><%=book.title%> by <%=book.author%></li>
                <% if book.rented == true %>
                <p>This book is rented.</p>
                <% else %>
                <p>This book is available to rent.</p>
                <% end %>
            <%= link_to 'Delete book', book_path(book), method: :delete %> <%= link_to 'Edit book', edit_book_path(book) %>
                <% if book.rented == true && book.user_id == current_user.id %>
                <p><%= link_to 'Return book', return_path(book.id)%></p>
                <% end %>
                <br>
                <br>
        <%end%>
        </ol>
    <% else %>
        <p>Your list is currently empty.</p>
    <% end %>
    <br>
    <p><%=link_to 'Click here to add a book to your Books I Own list', new_book_path%></p>
    
<h3>My Comments </h3>
    <ol>
    <% @my_library.user.commented_books.each do |book| %>
        <li><%=link_to book.title, book_path(book.id)%></li>
            
            <% book.comments.each do |comment| %>
            <strong><p><%=comment.commenter%></p></strong>
            <p><%=comment.body%></p>
            <% end %>
        <br>
    <% end %>
    </ol>