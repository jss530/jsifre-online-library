<h1>Add a book and genre to the Online Library</h1>

<h3>Please fill out the form below. Genre name and Book title and author are mandatory. You can upload a photo of the cover as well.</h3>

<%= form_for @genre, url: books_path, html: { multipart: true } do |f| %>
  <%= f.label :name, 'New Genre Name:' %><br>
  <%= f.text_field :name %>
  <br>
  <br>
  <strong>Your New Book:</strong>
  <br>
  <br>
  <%= f.fields_for :books, @genre.books.build do |b| %>
      <%= b.file_field :image %><br>
      <br>
      <%= b.label :title, "Title:"%><br>
      <%= b.text_field :title %><br>
      <br>
      <%= b.label :author, "Author:"%><br>
      <%= b.text_field :author%><br>
      <br>
      <%= b.label :year, "Year of publication:"%><br>
      <%= b.text_field :year%><br>
      <br>
      <%= b.label :description, "Write a short book summary:"%><br>
      <%= b.text_area :description%><br>
      <br>
      <%= b.hidden_field :user_id, :value => current_user.id %>
      <%= b.hidden_field :owner_number, :value => current_user.id %>
  <%= f.submit "Add Genre and Book!" %>
  <% end %>
<% end %>